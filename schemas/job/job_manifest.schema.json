{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/job/job_manifest.schema.json",
  "title": "GATOS Job Manifest (Canonical JSON)",
  "type": "object",
  "additionalProperties": false,
  "required": ["command", "timeout"],
  "properties": {
    "command": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Executable and arguments prefix."
    },
    "args": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "timeout": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^P[T\dHMS]+$" }
      ],
      "description": "Seconds (integer) or ISO-8601 duration string; implementations MUST normalize to integer seconds in canonical form."
    },
    "env": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "propertyNames": { "pattern": "^[A-Za-z_][A-Za-z0-9_]*$" }
    },
    "cwd": { "type": "string" },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "algo", "hash"],
        "properties": {
          "kind": { "type": "string", "enum": ["blobptr"] },
          "algo": { "type": "string", "const": "blake3" },
          "hash": { "$ref": "../common/ids.schema.json#/$defs/blake3Digest" },
          "size": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "policy_root": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "ulid": { "type": "string" }
  }
}

