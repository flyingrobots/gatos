{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GATOS Watcher Event (v1)",
  "type": "object",
  "required": ["ts", "actor", "path", "rule", "action"],
  "properties": {
    "ts": { "type": "string", "format": "date-time" },
    "actor": { "type": "string" },
    "path": { "type": "string" },
    "rule": { "type": "string" },
    "action": {
      "type": "string",
      "enum": [
        "lock.applied",
        "lock.released",
        "deny.write",
        "task.started",
        "task.succeeded",
        "task.failed"
      ]
    },
    "grant_id": { "type": "string" },
    "proposal_id": { "type": "string" },
    "task": { "type": "string" },
    "remediation": { "type": "string" },
    "details": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}
