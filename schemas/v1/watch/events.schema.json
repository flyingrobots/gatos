{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gatos.io/schemas/v1/watch/events.schema.json",
  "title": "GATOS Watcher Event",
  "type": "object",
  "additionalProperties": false,
  "required": ["ts", "rule", "actor", "path", "action"],
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp in UTC."
    },
    "rule": {
      "type": "string",
      "description": "Governance rule id (ADR-0003)."
    },
    "actor": {
      "type": "string",
      "description": "Local actor identity (user:alice, agent:renderbot, etc.)."
    },
    "path": {
      "type": "string",
      "description": "Relative path within the repository."
    },
    "action": {
      "type": "string",
      "enum": [
        "deny.write",
        "deny.delete",
        "lock.applied",
        "lock.released",
        "task.started",
        "task.finished",
        "task.failed"
      ],
      "description": "Event type emitted by the watcher."
    },
    "remediation": {
      "type": "string",
      "description": "User-facing remediation hint (optional)."
    },
    "details": {
      "type": "object",
      "description": "Additional context such as task id, error messages, or grant ids.",
      "additionalProperties": true
    }
  }
}
