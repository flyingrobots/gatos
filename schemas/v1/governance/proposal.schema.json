{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gatos.dev/schemas/v1/governance/proposal.schema.json",
  "title": "GATOS Governance Proposal (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["action", "target", "proposal_id", "policy_rule"],
  "properties": {
    "action": { "type": "string" },
    "target": { "$ref": "../../v1/common/ids.schema.json#/$defs/uri" },
    "proposal_id": { "$ref": "../../v1/common/ids.schema.json#/$defs/blake3Digest" },
    "required_quorum": { "type": "string" },
    "expire_at": { "type": "string", "format": "date-time" },
    "policy_rule": { "type": "string" },
    "created_by": { "type": "string" }
  }
}

