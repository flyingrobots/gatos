{
  "mounts": [
    {
      "name": "policies-upstream",
      "source": "git+https://example.com/upstream.git#refs/heads/main",
      "verify": "ed25519:aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa",
      "refresh": "PT5M",
      "auth": {
        "kind": "token",
        "token_env": "UPSTREAM_TOKEN"
      },
      "policy": {
        "trusted_refs": ["refs/heads/main"],
        "max_depth": 128
      }
    }
  ]
}
